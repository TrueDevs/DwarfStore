<% if @new_reset %>
	<p>Link for reset will be send to your email!</p>
	<%= form_tag user_password_index_path do %>
		<p>
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</p>

		<p>
			<%= submit_tag 'Reset' %>
		</p>
	<% end %>
<% else %>
	<p>Reset url generated, please check your email!</p>
<% end %>
