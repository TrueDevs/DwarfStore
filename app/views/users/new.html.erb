<h1>Sign up</h1>
<%= form_for @user do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p><%= link_to 'Forgot password?', new_user_password_path %></p>

	<p>
		<%= f.submit 'Sign up' %>
	</p>
<% end %>