<!DOCTYPE html>
<html>
<head>
  <title>DwarfStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<ul>
	<li><%= link_to 'Main', '/' %></li>

	<% if current_user %>
		<li>Hi, <%= current_user.email%> <%= link_to 'Sign out', 'sign_out', method: :delete %></li>
	<% else %>
		<li><%= link_to 'Sing in', 'sign_in' %></li>
		<li><%= link_to 'Sign up', 'sign_up' %></li>
	<% end %>
</ul>

<%= yield %>

</body>
</html>
